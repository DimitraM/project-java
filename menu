import java.util.*;
public class Menu extends Network {
    
	public User start(){ 
	User usernull=null;
    System.out.println("Welcome! Please enter your username:");
    Scanner sc = new Scanner(System.in);
    String i = sc.nextLine();
    //Set<User> mySet = network.get("i");
    for(int j=0; j<network.size();j++) {
    if (network.containsValue(i))
    {
    	return network.get(j);
    }
    
	}
    return usernull;
	}
    public void seeyourwall() 
    {
    	User myuser=start();
    	System.out.println("Posts: "+ myuser.wall.getpostlist()+"Replies :"+myuser.wall.getreplies());
    }
    public void seeFriendsWall(User user1)
    {

    System.out.println("Choose to see a friends wall");
    
    System.out.println(user1.getFriend());
   
    System.out.println("Press the number of the friend you want to see his wall");
    Scanner sc = new Scanner(System.in);
    int j = sc.nextInt();
    
    System.out.println("Posts: "+ user1.wall.getpostlist()+"Replies :"+user1.wall.getreplies());
    }
}

