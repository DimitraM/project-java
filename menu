import java.util.*;
public class Menu extends Network {
    
	public User start(){ 
	User usernull=null;
    System.out.println("Welcome! Please enter your username:");
    Scanner sc = new Scanner(System.in);
    String i = sc.nextLine();
    //Set<User> mySet = network.get("i");
    for(int j=0; j<network.size();j++) {
    if (network.containsValue(i))
    {
    	return network.get(j);
    }
    
	}
    return usernull;
	}
    public void seeyourwall() {
    	User myuser=start();
    	myuser.wall.postlist.toString();
    }
public void seeFriendsWall(User user1)
{

System.out.println("Διάλεξε να δεις το Wall ενος φίλου σου");
user1.getList();

for(int i=0; i<user1.friends.size(); i++)
{
System.out.println(user1.friends.get(i));
}
System.out.println("Για το 1ο φίλο σου πληκτρολόγησε τον αριθμό 0 για τον 2ο το 1 κ.ο.κ");
Scanner sc = new Scanner(System.in);
int j = sc.nextInt();

switch(j)
{
case(0):{}
break;
case(1):{user1.friends.get(0).printWall();}
break;
case(2):{user1.friends.get(1).printWall();}
break;
}

}


